<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/notice">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@color/black">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/notice"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/button_image_description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="공지사항"
                    android:id="@+id/main_notice"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:id="@+id/noticeListView"
                android:layout_margin="5dp"
                android:dividerHeight="1dp"
                android:divider="@color/grayDark"></ListView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_gravity="center"
                android:padding="10dp">

                <TextView
                    android:drawableStart="@drawable/ic_baseline_map_24"
                    android:drawableLeft="@drawable/ic_baseline_map_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text=" 학교 안내도"
                    android:id="@+id/map_information"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment">
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/menu_bar"
        android:layout_marginRight="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/courseButton"
            android:text="강의 목록"
            android:drawableTop="@drawable/ic_course"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:background="@color/menu_bar"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/scheduleButton"
            android:text="시간표"
            android:drawableTop="@drawable/ic_schedule"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:background="@color/menu_bar"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/boardButton"
            android:text="게시판"
            android:drawableTop="@drawable/ic_board"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:background="@color/menu_bar"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/statisticsButton"
            android:text="내 정보"
            android:drawableTop="@drawable/ic_statistics"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:background="@color/menu_bar"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/languageButton"
            android:text="번역"
            android:drawableTop="@drawable/language"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp"
            android:background="@color/menu_bar"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        =

    </LinearLayout>

</LinearLayout>